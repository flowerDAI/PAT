#include <iostream>
using namespace std;
int main (){
	int number, i = 0;
	
	cin >> number;
	int arr[3] = {0};
	
	while( number != 0){
		arr[i] = number % 10;
		number = number / 10; 
		i++;
	}
	
	
//	cout << arr[0] << arr[1] << arr[2];
	
	
	for (int i =0 ; i < arr[2] ; i++){
		cout << "B";
	}
	
	for (int i =0 ; i < arr[1] ; i++){
		cout << "S";
	}
	
	for (int i =0 ; i < arr[0] ; i++){
		cout << i+1 ;
	}
	
	return 0;
}
